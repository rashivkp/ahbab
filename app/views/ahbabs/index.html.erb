<table class="table table-striped">
    <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Mobile</th>
        <th>Address</th>
        <th>Amount</th>
        <th>Active</th>
        <th>
            <% if params[:show_all] == "true" %>
                <%= link_to "Hide Inactive", root_path, class:'' %>
            <% else %>
                <%= link_to "Show All", root_path(show_all: true), class:'' %>
            <% end %>
        </th>
    </thead>
    <% @ahbabs.each do |ahbab| %>
        <tr>
            <td><%= ahbab.id %></td>
            <td><%= link_to ahbab.name, ahbab %></td>
            <td><%= ahbab.mobile %></td>
            <td><%= ahbab.address %></td>
            <td><%= ahbab.amount %></td>
            <td>
                <% if ahbab.active %>
                    <span class="badge bg-success">Yes</span>
                <% else %>
                    <span class="badge bg-danger">No</span>
                <% end %>
            </td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Actions
                    </button>
                    <ul class="dropdown-menu" area-labeledby="dropdownMenuButton1">
                        <li>
                            <%= link_to "Mark Received", ahbab_mark_received_path(ahbab),
                                method: :post,
                                data: {confirm: "Are you sure to mark payment received for this year?"},
                                class: 'dropdown-item' %>
                        </li>
                        <li>
                            <% if ahbab.active %>
                                <%= link_to "Deactivate", ahbab_toggle_activation_path(ahbab),
                                    method: :post,
                                    data: {confirm: "Are you sure to Deactivate ?"},
                                    class: 'dropdown-item'
                                %>
                        <% else %>
                            <%= link_to "Activate", ahbab_toggle_activation_path(ahbab),
                                method: :post,
                                data: {confirm: "Are you sure to Activate ?"},
                                class: 'dropdown-item'
                            %>
                    <% end %>
                        </li>
                        <li>
                            <a class="dropdown-item" href="<%= edit_ahbab_path(ahbab) %>"><i class="fa fa-user-edit"></i> Edit</a>
                        </li>
                        <li>
                            <%= link_to "Delete", ahbab_path(ahbab),
                                method: :delete,
                                data: {confirm: "Are you sure ?" },
                                class: 'dropdown-item'
                            %>
                        </li>
                    </ul>
                    <div class="dropdown">
            </td>
        </tr>
    <% end %>
</table>
<%= paginate @ahbabs %>
